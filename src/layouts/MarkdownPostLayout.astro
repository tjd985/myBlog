---
import BaseLayout from './BaseLayout.astro';
import { destructDate } from '@utils/destructDate';
import type { FrontMatter } from '@type/FrontMatter';

interface Props {
  frontmatter: FrontMatter;
}

const { frontmatter } = Astro.props;
const { title, pubDate, description } = frontmatter;
const { year, month, date } = destructDate(pubDate);
---

<BaseLayout>
  <section class="post-wapper">
    <div class="mb-[50px] border-b-[1px] border-black flex flex-col gap-[15px]">
      <h2>{title}</h2>
      <p class="text-osh-grey">{description}</p>
      <p class="mb-[20px]">{`${year}년 ${month}월 ${date}일 작성`}</p>
    </div>
    <slot />
  </section>
</BaseLayout>
